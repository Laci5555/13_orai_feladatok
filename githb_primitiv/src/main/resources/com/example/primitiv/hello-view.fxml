<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.primitiv.HelloController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Fájl">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#Open" text="Megnyitás" />
                  <MenuItem mnemonicParsing="false" onAction="#Save" text="Mentés" />
                  <MenuItem mnemonicParsing="false" onAction="#Exit" text="Kilépés" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Rendez">
            <items>
                  <RadioMenuItem mnemonicParsing="false" selected="true" text="Név">
                     <toggleGroup>
                        <ToggleGroup fx:id="group" />
                     </toggleGroup></RadioMenuItem>
                  <RadioMenuItem mnemonicParsing="false"  text="Év" toggleGroup="$group" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" onAction="#sugo" text="Súgó">
            <items>
              <MenuItem mnemonicParsing="false" text="Névjegy" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox spacing="5.0">
         <children>
            <ListView fx:id="lista" onMousePressed="#ListaClick" prefHeight="200.0" prefWidth="200.0" />
            <VBox spacing="10.0">
               <children>
                  <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT">
                     <children>
                        <Label prefWidth="50.0" text="Név:" />
                        <TextField fx:id="nev" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT">
                     <children>
                        <Label prefWidth="50.0" text="Év:" />
                        <TextField fx:id="ev" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT">
                     <children>
                        <Label prefWidth="50.0" text="Darab:" />
                        <TextField fx:id="db" />
                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#Add" prefWidth="100.0" text="Hozzáad" />
                  <Button mnemonicParsing="false" onAction="#Upd" prefWidth="100.0" text="Módosít" />
                  <Button mnemonicParsing="false" onAction="#Del" prefWidth="100.0" text="Töröl" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
