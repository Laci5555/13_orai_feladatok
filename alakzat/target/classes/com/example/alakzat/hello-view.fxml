<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.alakzat.HelloController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <RadioButton fx:id="piros" mnemonicParsing="false" onAction="#onRadioClick" prefWidth="100.0" text="Piros">
                     <toggleGroup>
                        <ToggleGroup fx:id="szin" />
                     </toggleGroup></RadioButton>
                  <RadioButton fx:id="negyzet" mnemonicParsing="false" onAction="#onRadioClick" prefWidth="100.0" text="Négyzet">
                     <toggleGroup>
                        <ToggleGroup fx:id="alkazat" />
                     </toggleGroup></RadioButton>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <RadioButton fx:id="zold" mnemonicParsing="false" onAction="#onRadioClick" prefWidth="100.0" selected="true" text="Zöld" toggleGroup="$szin" />
                  <RadioButton fx:id="kor" mnemonicParsing="false" onAction="#onRadioClick" prefWidth="100.0" text="Kör" toggleGroup="$alkazat" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <RadioButton fx:id="kek" mnemonicParsing="false" onAction="#onRadioClick" prefWidth="100.0" text="Kék" toggleGroup="$szin" />
                  <RadioButton fx:id="haromszog" mnemonicParsing="false" onAction="#onRadioClick" prefWidth="100.0" selected="true" text="Háromszög" toggleGroup="$alkazat" />
               </children></HBox>
            <Label fx:id="lb" style="-fx-background-color: #00FF00; -fx-border-color: black;">
               <graphic>
                  <ImageView fx:id="kep" fitHeight="96.0" fitWidth="96.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/haromszog.png" />
                     </image>
                  </ImageView>
               </graphic>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" spacing="5.0">
         <children>
            <HBox alignment="BOTTOM_CENTER" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onHozzaadClick" prefWidth="100.0" text="Hozzáad">
                     <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/add16.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onTorolClick" prefWidth="100.0" text="Töröl">
                     <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/del16.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <ListView fx:id="lista" onMousePressed="#onListaPressed" prefHeight="200.0" prefWidth="200.0" />
            <Button mnemonicParsing="false" onAction="#onMentesClick" prefWidth="100.0" text="Mentés">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/save16.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children></VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
